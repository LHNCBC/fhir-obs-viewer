{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "fhir-obs-viewer": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "public",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "optimization": false,
            "sourceMap": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/conf/csv",
              {
                "glob": "**/*",
                "input": "notice-banner/",
                "output": "/notice-banner/"
              }
            ],
            "styles": [
              "src/theme/theme.scss",
              "src/styles.less"
            ],
            "scripts": [
              "./node_modules/jquery/dist/jquery.min.js"
            ],
            "customWebpackConfig": {
              "path": "./webpack/extra-webpack.config.js",
              "mergeRules": {
                "externals": "replace"
              }
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "fhir-obs-viewer:build",
            "port": 8100
          },
          "configurations": {
            "production": {
              "browserTarget": "fhir-obs-viewer:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-builders/custom-webpack:extract-i18n",
          "options": {
            "browserTarget": "fhir-obs-viewer:build"
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/conf/csv"
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "src/styles.less"
            ],
            "scripts": [
              "./node_modules/jquery/dist/jquery.min.js"
            ],
            "customWebpackConfig": {
              "path": "./webpack/extra-webpack.config.js",
              "mergeRules": {
                "externals": "replace"
              }
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "src/tsconfig.spec.json",
              "cypress/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "cypress-e2e": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "fhir-obs-viewer:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "fhir-obs-viewer:serve:production"
            }
          }
        },
        "cypress-open": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "watch": true
          }
        }
      }
    }
  },
  "defaultProject": "fhir-obs-viewer"
}
